                            alert('An error occurred while processing the request. Please try again.');
                        } else {
                            alert('An unexpected error occurred. Please check the console for more details.');
                        }
                    });
            });

        })
    </script>

    <!-- Apply Coupon Fetch -->
    <script>
        document.getElementById("applyButton").addEventListener("click", function (event) {
            event.preventDefault();
            const couponInput = document.getElementById("coupon");
            const couponCodeMessage = document.getElementById("couponCodeMessage");
            const applyButton = document.getElementById("applyButton");
            const removeCouponBtn = document.getElementById("removeCouponBtn");
            const couponInputField = document.getElementById("coupon");
            const orderTotalSpan = document.getElementById("orderTotal");
            const orderGstSpan = document.getElementById("orderGst");

            const codOption = document.getElementById("payment-method-3");
            const codSpan = document.getElementById("codSpan");
            const codLabel = document.getElementById("payment-method-3-label")

            const couponCode = couponInput.value;
            const cartId = "<%= cart._id %>";

            couponCodeMessage.textContent = "";

            fetch("/checkout/apply-coupon", {
                method: "POST",
                headers: {
                    "Content-Type": "application/json",
                },
                body: JSON.stringify({
                    couponCode,
                    cartId,
                }),
            })
                .then((response) => response.json())
                .then((responseData) => {
                    const { message, errMessage, totalAmount, couponCode, discountAmount, taxAmount } =
                        responseData.responseData;

                    if (errMessage) {
                        couponCodeMessage.textContent = errMessage;
                        couponCodeMessage.classList.add("text-danger");
                    } else {
                        couponCodeMessage.textContent = message;
                        couponCodeMessage.classList.add("text-success");

                        setTimeout(() => {
                            couponCodeMessage.textContent = "";
                        }, 3000);

                        if (message === "Coupon applied successfully") {
                            // Disable the coupon input field and set the value
                            couponInputField.disabled = true;
                            couponInputField.value = couponCode;

                            // Update the order total span
                            orderTotalSpan.textContent = `₹ ${totalAmount.toLocaleString()}`;
                            orderGstSpan.textContent = `₹ ${taxAmount.toLocaleString()}`;
                            // Update the coupon and discount information
                            const couponHtml = `<ul class="coupon-ul">
                                                    <li>Coupon Applied: <span>${couponCode}</span></li>
                                                </ul>`;
                            const discountHtml = `<ul class="discount-ul">
                                                    <li>Discount Applied: <span>- ₹ ${discountAmount.toLocaleString()}</span></li>
                                                </ul>`;

                            // Insert the coupon and discount HTML elements
                            const orderTotalElement = document.getElementById("orderTotalUl");
                            orderTotalElement.insertAdjacentHTML("beforebegin", discountHtml);
                            orderTotalElement.insertAdjacentHTML("beforebegin", couponHtml);

                            // Show the "Remove Coupon" button
                            removeCouponBtn.style.display = "block";
                            applyButton.style.display = "none";
                        }
                        if (totalAmount <= 5000) {
                            codOption.disabled = false;
                            codSpan.style.display = 'none';
                            codLabel.style.pointerEvents = 'auto';
                        } else {
                            codOption.disabled = true;
                            codSpan.style.display = 'inline';
                            codLabel.style.pointerEvents = 'none';
                        }
                    }
                })
                .catch((error) => {
                    console.error("Error:", error);
                });
        });

        // Event listener for the coupon form submission
        document.getElementById("couponForm").addEventListener("submit", function (event) {
            event.preventDefault();
            const couponInput = document.getElementById("coupon");
            const couponCode = couponInput.value;
            const cartId = "<%= cart._id %>";

            applyCoupon(couponCode, cartId);
        });

        function removeCoupon() {
            const couponInput = document.getElementById("coupon");
            const couponCodeMessage = document.getElementById("couponCodeMessage");
            const applyButton = document.getElementById("applyButton");
            const removeCouponBtn = document.getElementById("removeCouponBtn");
            const couponInputField = document.getElementById("coupon");
            const orderTotalSpan = document.getElementById("orderTotal");
            const orderGstSpan = document.getElementById("orderGst");

            const codOption = document.getElementById("payment-method-3");
            const codSpan = document.getElementById("codSpan");
            const codLabel = document.getElementById("payment-method-3-label")


            const couponCode = couponInput.value;
            const cartId = "<%= cart._id %>";

            fetch("/checkout/remove-coupon", {
                method: "POST",
                headers: {
                    "Content-Type": "application/json",
                },
                body: JSON.stringify({
                    couponCode,
                    cartId,
                }),
            })
                .then((response) => response.json())
                .then((responseData) => {
                    const { message, totalAmount, taxAmount } = responseData.responseData;
                    if (message === "Coupon removed") {
                        // Enable the coupon input field
                        couponInputField.disabled = false;

                        // Remove the coupon and discount information
                        const existingCouponUl = document.querySelector(".coupon-ul");
                        if (existingCouponUl) {
                            existingCouponUl.remove();
                        }
                        const existingDiscountUl = document.querySelector(".discount-ul");
                        if (existingDiscountUl) {
                            existingDiscountUl.remove();
                        }

                        // Update the order total span
                        orderTotalSpan.textContent = `₹ ${totalAmount.toLocaleString()}`;
                        orderGstSpan.textContent = `₹ ${taxAmount.toLocaleString()}`;

                        // Hide the "Remove Coupon" button and show the "Apply Coupon" button
                        removeCouponBtn.style.display = "none";
                        applyButton.style.display = "block";
                    }
                    if (totalAmount <= 5000) {
                        codOption.disabled = false;
                        codSpan.style.display = 'none';
                        codLabel.style.pointerEvents = 'auto';
                    } else {
                        codOption.disabled = true;
                        codSpan.style.display = 'inline';
                        codLabel.style.pointerEvents = 'none';
                    }
                })
                .catch((error) => {
                    console.error("Error:", error);
                });
        }

        document.getElementById("removeCouponBtn").addEventListener("click", removeCoupon);

        window.onload = removeCoupon();
    </script>


<%- include('../layouts/header.ejs',{userId:userId}) %>

    <style>
        .coupons-container {
            display: flex;
            flex-wrap: wrap;
            justify-content: center;
        }

        .coupon-card {
            margin: 10px;
        }

        .discount {
            font-weight: 700;
        }

        .modal-header {
            background-color: #ffffff;
            padding: 10px;
            display: flex;
            justify-content: space-between;
            align-items: center;
            width: 100%;
        }

        .card {
            margin-top: 30px;
        }

        .card {
            width: 180px;
            height: 230px;
            padding: 10px;
            border-radius: 20px;
            background: orange;
            border: none;
            color: #fff;
            display: flex;
            position: relative;
            align-items: center;
            justify-content: center;
        }

        .image {
            position: absolute;
            opacity: .1;
            left: 15px;
            top: 55px;
        }

        .image2 {
            position: absolute;
            bottom: 0;
            right: 0;
            opacity: .1;
        }

        .modal {
            display: none;
            position: fixed;
            z-index: 100;
            left: 0;
            top: 0;
            width: 100%;
            height: 100%;
            overflow: auto;
            background-color: rgba(0, 0, 0, 0.4);

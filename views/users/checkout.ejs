    <script>
        document.getElementById('addAddressButton').addEventListener('click', function () {
            // Show the modal popup
            $('#addAddressModal').modal('show');
        });
    </script>


    <!-- copying code from modal -->
    <script>
        document.querySelectorAll('.copy-code-btn').forEach(button => {
            var modal = document.getElementById("myModal");

            button.addEventListener('click', () => {
                const couponCode = button.closest('.coupon-card').dataset.couponCode;
                navigator.clipboard.writeText(couponCode)
                    .then(() => {
                        modal.style.display = "none";
                    })
                    .catch(err => {
                        console.error('Failed to copy: ', err);
                    });
            });
        });
        document.querySelectorAll('.card').forEach(card => {
            var modal = document.getElementById("myModal");
            card.addEventListener('click', () => {
                const couponCard = card.closest('.coupon-card');
                const couponCode = couponCard.dataset.couponCode;
                const couponUsed = couponCard.dataset.couponUsed === 'true';

                if (!couponUsed) {
                    navigator.clipboard.writeText(couponCode)
                        .then(() => {
                            $.toast({
                                heading: 'Coupon Copied',
                                showHideTransition: 'slide',
                                position: 'top-center',
                                icon: 'success',
                                stack: 0
                            });
                            modal.style.display = "none";
                        })
                        .catch(err => {
                            console.error('Failed to copy: ', err);
                        });
                } else {
                    // Coupon already used, show an error message or perform any other desired action
                    $.toast({
                        heading: 'Coupon Already Used',
                        showHideTransition: 'slide',
                        position: 'top-center',
                        icon: 'error',
                        stack: 0
                    });
                }
            });
        });

    </script>

    <!-- View Coupon modal -->
    <script>


        document.addEventListener("DOMContentLoaded", function () {
            var modal = document.getElementById("myModal");
            var viewCouponsLink = document.getElementById("viewCoupons");

            viewCouponsLink.addEventListener("click", function () {
                modal.style.display = "block";
            });



            window.addEventListener("click", function (event) {
                if (event.target == modal) {
                    modal.style.display = "none";
                }
            });
        });
        document.addEventListener("DOMContentLoaded", function () {
            var modal = document.getElementById("myModal");
            var closeBtn = document.getElementById("cls-btn");
            closeBtn.addEventListener("click", function () {
                modal.style.display = "none";
            });


        });

    </script>



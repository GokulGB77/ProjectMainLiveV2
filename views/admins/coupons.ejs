    <script>
        $(document).ready(function () {
            // Check if there's a toast message in session
            const toastMessage = sessionStorage.getItem('toastMessage');
            if (toastMessage) {
                // Display the toast message
                $.toast({
                    heading: 'Success',
                    text: toastMessage,
                    showHideTransition: 'slide',
                    icon: 'success'
                });
                // Clear the toast message from session after displaying
                sessionStorage.removeItem('toastMessage');
            }
        });
    </script>
    <script>
        const activateCoupon = async (couponId,status) => {
            try {
                const response = await fetch(`/admin/coupons/activate-coupon?id=${couponId}&status=${status}`, {
                    method: 'GET',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                });

                if (!response.ok) {
                    throw new Error(`HTTP error! status: ${response.status}`);
                }

                const data = await response.json();
                console.log(data);

                // Update the <td> element with the new status
                const couponStatusTd = document.querySelector(`td[data-coupon-id="${couponId}"] span.badge`);
                const newStatus = 'Active';
                const badgeClass = 'alert-success';
                couponStatusTd.classList.remove('alert-danger');
                couponStatusTd.classList.add(badgeClass);
                couponStatusTd.textContent = newStatus;

                // Update the action button
                const couponActionTd = document.querySelector(`td[data-coupon-id="${couponId}"] div:last-child a`);
                couponActionTd.textContent = 'Deactivate';
                couponActionTd.removeEventListener('click', activateCoupon);
                couponActionTd.addEventListener('click', () => deactivateCoupon(couponId));
            } catch (error) {
                console.error('Error:', error);
            }
        };

        const deactivateCoupon = async (couponId,status) => {
            try {
                const response = await fetch(`/admin/coupons/deactivate-coupon?id=${couponId}&status=${status}`, {
                    method: 'GET',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                });

                if (!response.ok) {
                    throw new Error(`HTTP error! status: ${response.status}`);
                }

                const data = await response.json();
                console.log(data);

                // Update the status badge
                const couponStatusTd = document.querySelector(`td[data-coupon-id="${couponId}"] span.badge`);
                const newStatus = 'Inactive';
                const badgeClass = 'alert-danger';
                couponStatusTd.classList.remove('alert-success');
                couponStatusTd.classList.add(badgeClass);
                couponStatusTd.textContent = newStatus;

                // Update the action button
                const couponActionTd = document.querySelector(`td[data-coupon-id="${couponId}"] div:last-child a`);
                couponActionTd.textContent = 'Activate';
                couponActionTd.removeEventListener('click', deactivateCoupon);
                couponActionTd.addEventListener('click', () => activateCoupon(couponId));
            } catch (error) {
                console.error('Error:', error);
            }
        };
        const deleteCoupon = async (couponId) => {
            try {
                const response = await fetch(`/admin/coupons/delete-coupon?id=${couponId}`, {
                    method: 'DELETE', // Change method to DELETE
                    headers: {
                        'Content-Type': 'application/json',
                    },
                });

                if (!response.ok) {
                    throw new Error(`HTTP error! status: ${response.status}`);
                }

                // Remove the coupon row from the table
                const couponRow = document.querySelector(`tr[data-coupon-id="${couponId}"]`);
                couponRow.remove();
            } catch (error) {
                console.error('Error:', error);
            }
        };

    </script>
    

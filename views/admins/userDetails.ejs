                                                    }
                                                });
                                            });
                                        }

                                        // Call the function to attach event listeners after updating the table
                                        // attachPaginationClickListeners();
                                        attachButtonClickListeners();
                                    </script>
                                </table>
                            </div>
                            <nav aria-label="Page navigation">
                                <ul class="pagination pagination-area mt-30 mb-50 justify-content-center"
                                    style="width: 1000px;">

                                </ul>
                            </nav>
                            <script>
                                const tableBody = document.querySelector('.table tbody');
                                const paginationContainer = document.querySelector('.pagination');

                                async function fetchUserDetails(page) {
                                    const response = await fetch(`/admin/user-details-fetch?page=${page}`);
                                    const data = await response.json();

                                    if (response.ok) {
                                        tableBody.innerHTML = '';
                                        data.users.forEach((item, index) => {
                                            const row = document.createElement('tr');
                                            row.innerHTML = `
                                                <td class="text-center">${index + 1 + (page - 1) * 10}</td>
                                                <td><b>${item.name}</b></td>
                                                <td>${item.email}</td>
                                                <td>${item.mobile}</td>
                                                <td class="text-center">
                                                    <span class="badge rounded-pill alert-${item.status === 1 ? 'success' : 'danger'}">
                                                    ${item.status === 0 ? 'Blocked' : 'Active'}
                                                    </span>
                                                </td>
                                                
                                               

                                                <td style="width: 10%" class="text-center">
                                                    <div>
                                                        <button class="btn ${item.status === 0 ? 'btn-outline-success' : 'btn-outline-danger'}" type="button" onclick="changeStatus('${item._id}', ${item.status})">
                                                            ${item.status === 0 ? 'Unblock' : 'Block'}
                                                        </button>
                                                    </div>
                                                </td>


                                            `;
                                            tableBody.appendChild(row);
                                        });

                                        paginationContainer.innerHTML = `
                                            <ul class="pagination justify-content-center">
                                            ${data.currentPage > 1 ? `
                                                <li class="page-item">
                                                <a class="page-link" href="#" data-page="${data.currentPage - 1}"><</a>
                                                </li>
                                            ` : ''}

                                            ${Array.from({ length: data.totalPages }, (_, i) => i + 1).map(pageNum => `
                                                <li class="page-item ${pageNum === data.currentPage ? 'active' : ''}">
                                                <a class="page-link" href="#" data-page="${pageNum}">${pageNum}</a>
                                                </li>
                                            `).join('')}

                                            ${data.currentPage < data.totalPages ? `
                                                <li class="page-item">
                                                <a class="page-link" href="#" data-page="${data.currentPage + 1}">></a>
                                                </li>
                                            ` : ''}
                                            </ul>
                                        `;

                                        attachPaginationClickListeners();
                                    } else {
                                        console.error('Failed to fetch user details');
                                    }
                                }
                                function changeStatus(id, currentStatus) {
                                    let newStatus = currentStatus === 1 ? 1 : 0; // Toggle the status
                                    let route = `/admin/user-details/change-status?id=${id}&status=${newStatus}`;
                                    location.href = route;
                                }


                                function attachPaginationClickListeners() {
                                    document.querySelectorAll('.pagination .page-link').forEach(link => {
                                        link.addEventListener('click', async (e) => {
                                            e.preventDefault();
                                            const page = e.target.dataset.page;
                                            fetchUserDetails(page);
                                        });
                                    });
                                }

                                // Initial fetch
                                fetchUserDetails(1);
                            </script>

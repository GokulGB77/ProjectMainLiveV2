                                    <tbody>
                                        <!-- Loaded using fetch request -->

                                    </tbody>
                                    <script>
                                        function attachButtonClickListeners() {
                                            document.querySelectorAll('.table tbody td button').forEach(button => {
                                                button.addEventListener('click', async () => {
                                                    const userId = button.dataset.id;
                                                    const action = button.dataset.action;
                                                    const url = `/admin/user-details/change-status?id=${userId}`;

                                                    try {
                                                        const response = await fetch(url, {
                                                            method: 'PUT',
                                                            headers: {

            <div class="card mb-4">
                


            <div class="card-body">
                <h2 class="mb-4">Category Offer</h2>
            
                <form action="/admin/categoryOffer" method="post" onsubmit="return validateCategoryOfferForm()">
                    <div class="mb-3">
                        <label for="title" class="form-label">Title:</label>
                        <input type="text" id="title" name="title" class="form-control" style="max-width: 300px;" required>
                        <p id="title-error" class="error-message" style="color: red;"></p>
                    </div>
                
                    <div class="mb-3">
                        <label for="description" class="form-label">Description:</label>
                        <textarea maxlength="20" id="description" name="description" class="form-control" style="max-width: 500px;"
                            required></textarea>
                        <p id="description-error" class="error-message" style="color: red;"></p>
                    </div>
                
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label for="startDate" class="form-label">Start Date:</label>
                            <input type="date" id="startDate" name="startDate" class="form-control" required>
                            <p id="startDate-error" class="error-message" style="color: red;"></p>
                        </div>
                        <div class="col-md-6">
                            <label for="endDate" class="form-label">End Date:</label>
                            <input type="date" id="endDate" name="endDate" class="form-control" required>
                            <p id="endDate-error" class="error-message" style="color: red;"></p>
                        </div>
                    </div>
                
                    <div class="mb-3">
                        <label for="category" class="form-label">Category:</label>
                        <select id="category" name="category" class="form-select" style="max-width: 350px;" required>
                        <% categories.forEach(category=> { %>
                            <option value="<%= category._id %>">
                                <%= category.cName %>
                            </option>
                            <% }); %>
                        </select>
                        <p id="category-error" class="error-message" style="color: red;"></p>
                    </div>
                
                    <div class="mb-3">
                        <label for="discountPercentage" class="form-label">Discount Percentage:</label>
                        <input type="number" id="discountPercentage" name="discountPercentage" class="form-control" min="0" value="0"
                            style="max-width: 150px;" required>
                        <p id="discountPercentage-error" class="error-message" style="color: red;"></p>
                    </div>
                
                    <button type="submit" class="btn btn-primary">Add Category Offer</button>
                </form>

            </div>






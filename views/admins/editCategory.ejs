    <script>
        function validateName() {
            var name = document.getElementById("categoryName").value;
            var nameError = document.getElementById("nameError");
            var existingError = nameError.textContent.trim();
            nameError.textContent = "";
            let value = false

            if (name.trim() === "") {
                nameError.textContent = "Name cannot be empty";
            } else if (/^\d+$/.test(name)) {
                nameError.textContent = "Name cannot contain only numbers";
            } else if (/^[^\w\s]+$/.test(name)) {
                nameError.textContent = "Name cannot be just symbols";
            } else if (name.startsWith(" ") || name.endsWith(" ")) {
                nameError.textContent = "Name should not start or end with space";
            } else if (/\s{2,}/.test(name)) {
                nameError.textContent = "Name should not have more than one space between two words";
            } else if (existingError !== "") {
                // If there is already an existing error, prevent adding the category
            } else {
                nameError.textContent = "";
                value = true;
            }

            return value;
        }

        function validateDescription() {
            var description = document.getElementById("categoryDetails").value
            var descriptionError = document.getElementById("descriptionError");
            let value = false;
            descriptionError.textContent = "";
            if (description.length > 300) {
                descriptionError.textContent = "Description should not exceed 300 characters";
            } else if (description.startsWith(" ") || description.endsWith(" ")) {
                descriptionError.textContent = "Description should not start or end with space";
            } else {
                descriptionError.textContent = "";
                value = true;
            }
            return value;
        }

        function validateForm() {

            if (validateName() && validateDescription()) {
                console.log("Fn validated");
                document.getElementById('createCategory').submit();
            } else {
                document.getElementById("main-error").innerText = "Cannot Add Category"
                console.log("Hellosssssssssssssssssssss");

            }
        }

    </script>

    <script>
        // Function to handle input change event
        function handleInputChange(index) {
            var inputField = document.getElementById('offprice_' + index);
            var applyButton = inputField.parentElement.querySelector('.apply-btn');

            // Enable the "Apply" button if there's any change in the input field value
            if (inputField.value !== inputField.getAttribute('data-initial-value')) {
                applyButton.disabled = false;
            } else {
                applyButton.disabled = true;
            }
        }

        // Attach input change event listener to all input fields with class "offer-input"
        document.querySelectorAll('.offer-input').forEach(function (inputField) {
            // Save the initial value of the input field
            inputField.setAttribute('data-initial-value', inputField.value);

            // Listen for input change event
            inputField.addEventListener('input', function () {
                // Get the index from the input field id
                var index = this.id.split('_')[1];
                // Call the handleInputChange function
                handleInputChange(index);
            });
        });

        // Ensure buttons are initially disabled for unchanged inputs
        document.querySelectorAll('.offer-input').forEach(function (inputField) {
            var index = inputField.id.split('_')[1];
            handleInputChange(index);
        });
    </script>



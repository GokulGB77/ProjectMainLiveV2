                        <script>
                            // Function to fetch existing data
                            function fetchExistingData() {
                                fetch('/admin/get-referral-offer')
                                    .then(response => response.json())
                                    .then(data => {
                                        document.getElementById('referredUserReward').value = data.forExistingUser;
                                        document.getElementById('referringUserReward').value = data.forNewUser;
                                    })
                                    .catch(error => console.error('Error:', error));
                            }
                        
                            // Fetch existing data when the page loads
                            fetchExistingData();
                        
                            // Event listener for form submission
                            document.getElementById('submitForm').addEventListener('click', function() {
                                // Get form data
                                const formData = new FormData(document.getElementById('referralForm'));
                        
                                // Convert form data to JSON object
                                const jsonData = {};
                                formData.forEach((value, key) => {
                                    jsonData[key] = value;
                                });
                        
                                // Send data to server using Fetch API
                                fetch('/admin/add-referral-offer', {
                                    method: 'POST',
                                    headers: {
                                        'Content-Type': 'application/json'
                                    },
                                    body: JSON.stringify(jsonData)
                                })
                                .then(response => {
                                    if (response.ok) {
                                        alert('Offer applied successfully!');
                                    } else {
                                        alert('Failed to apply offer. Please try again later.');
                                    }
                                })
                                .catch(error => {
                                    console.error('Error:', error);
                                    alert('An error occurred. Please try again later.');
                                });

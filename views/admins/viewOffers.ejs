                                <script>
                                    document.addEventListener('DOMContentLoaded', function () {
                                        const searchInput = document.getElementById('searchProduct');
                                        const selectBox = document.getElementById('selectedProducts');
                                        const selectedPreview = document.getElementById('selectedPreview');
                                        const selectedOptions = [];

                                        // Function to update selected options preview
                                        function updateSelectedPreview() {
                                            selectedPreview.innerHTML = '';
                                            selectedOptions.forEach(function (optionText) {
                                                const selectedOption = document.createElement('span');
                                                selectedOption.textContent = optionText;
                                                selectedOption.classList.add('selected-option');
                                                selectedOption.addEventListener('click', function () {
                                                    const index = selectedOptions.indexOf(optionText);
                                                    if (index !== -1) {
                                                        selectedOptions.splice(index, 1);
                                                        updateSelectedPreview();
                                                        selectBox.querySelectorAll('option').forEach(option => {
                                                            if (option.textContent === optionText) {
                                                                option.selected = false;
                                                            }
                                                        });
                                                    }
                                                });
                                                selectedPreview.appendChild(selectedOption);
                                            });
                                        }

                                        // Event listener for search input
                                        searchInput.addEventListener('input', function () {
                                            const searchValue = this.value.toLowerCase();
                                            Array.from(selectBox.options).forEach(function (option) {
                                                const text = option.textContent.toLowerCase();
                                                const matches = text.includes(searchValue);
                                                option.style.display = matches ? 'block' : 'none';
                                            });
                                        });

                                        // Event listener for select box change
                                        selectBox.addEventListener('change', function () {
                                            const selectedValues = Array.from(this.selectedOptions).map(option => option.textContent);
                                            selectedOptions.splice(0, selectedOptions.length, ...selectedValues);
                                            updateSelectedPreview();
                                        });

                                        // Initial update of selected preview
                                        updateSelectedPreview();
                                    });


                                </script>
                               

                                
                                <button type="submit" class="btn btn-primary">Create Product Offer</button>

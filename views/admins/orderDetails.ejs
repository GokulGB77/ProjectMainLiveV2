                                    if (response.ok) {
                                        // Refund approved successfully
                                        // You can perform additional actions here if needed
                                        console.log('Refund approved successfully');
                                        response.json().then(data => {
                                            // Check the condition again with updated orderDetails


                                            var myToast = $.toast({
                                                heading: 'Approving Refund.Please Wait..',
                                                text: "Approving Refund. The Amount will be added to user wallet",
                                                icon: 'info',
                                                hideAfter: 7000,
                                                position: 'top-center',

                                            });

                                            // Update the toast after three seconds.
                                            window.setTimeout(function () {
                                                myToast.update({
                                                    heading: "Success: Refunded to user wallet",
                                                    text: "Amount added to user wallet",
                                                    icon: 'success',
                                                    hideAfter: 7000,
                                                    position: 'top-center',
                                                });
                                                checkCondition(data.orderDetails);
                                                updatePaymentBadge(data.orderDetails);
                                                updateOrderStatusBadge(data.orderDetails);
                                            }, 3000)
                                        });
                                    } else {
                                        // Refund approval failed
                                        console.error('Failed to approve refund');
                                        var myToast = $.toast({
                                            heading: 'Approving Refund.Please Wait..',
                                            text: "Approving Refund. The Amount will be added to user wallet",

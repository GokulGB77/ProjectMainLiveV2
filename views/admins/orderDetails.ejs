                                } else if (orderDetails.orderStatus === "order-shipped") {
                                    paymentBadge.innerHTML = '<span class="badge rounded-pill alert-warning text-warning">Payment Pending</span>';
                                } else if (orderDetails.orderStatus === "return-requested") {
                                    paymentBadge.innerHTML = '<span class="badge rounded-pill alert-primary text-primary">Refund Initiated</span>';
                                } else if (orderDetails.orderStatus === "returned") {
                                    paymentBadge.innerHTML = '<span class="badge rounded-pill alert-primary text-dark">Refund Approved</span>';
                                } else if (orderDetails.orderStatus === "cancelled") {
                                    paymentBadge.innerHTML = '<span class="badge rounded-pill alert-info text-info">No Payment Done</span>';
                                }
                            } else {
                                if (orderDetails.orderStatus === "pending" || orderDetails.orderStatus === "order-delivered" || orderDetails.orderStatus === "order-shipped") {
                                    paymentBadge.innerHTML = '<span class="badge rounded-pill alert-success text-success">Payment Done</span>';
                                } else if (orderDetails.orderStatus === "return-requested" || orderDetails.orderStatus === "cancelled") {
                                    paymentBadge.innerHTML = '<span class="badge rounded-pill alert-primary text-primary">Refund Initiated</span>';
                                } else if (orderDetails.orderStatus === "returned") {
                                    paymentBadge.innerHTML = '<span class="badge rounded-pill alert-primary text-dark">Refund Approved</span>';
                                }
                            }
                        }


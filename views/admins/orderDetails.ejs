            <div class="card">
                <header class="card-header">
                    <div class="row align-items-center">
                        <div class="col-lg-6 col-md-6 mb-lg-0 mb-15">
                            <span>
                                <i class="material-icons md-calendar_today"></i> <b>
                                    <%= formattedDate %>, <%= formattedTime %>
                                </b>
                            </span> <br>
                            <small class="text-muted">Order ID: <%= orderDetails.orderId %></small>
                        </div>
                        <div class="col-lg-6 col-md-6 ms-auto text-md-end">
                            <% if (orderDetails.orderStatus==="pending" ){ %>
                                <select id="statusSelect" class="form-select d-inline-block mb-lg-0 mb-15 mw-200">
                                    <option disabled selected hidden><%=orderDetails.orderStatus  %></option>
                                    <option>order-shipped</option>
                                    <option>delivered</option>
                                </select>
                                <a class="btn btn-primary" href="#" id="changeOrderStatusBtn" >Save</a>
                                <% } else if (orderDetails.orderStatus==="order-delivered" ){ %>
                                    <select id="statusSelect" class="form-select d-inline-block mb-lg-0 mb-15 mw-200">
                                        <option disabled selected hidden>Change Status</option>
                                        <option>returned</option>
                                    </select>
                                    <a class="btn btn-primary" href="#" id="changeOrderStatusBtn" >Save</a>
                                    <% } else if (orderDetails.orderStatus==="order-shipped" ){ %>
                                        <select id="statusSelect" class="form-select d-inline-block mb-lg-0 mb-15 mw-200">
                                            <option disabled selected hidden>Change Status</option>
                                            <option>delivered</option>
                                        </select>
                                        <a class="btn btn-primary" href="#" id="changeOrderStatusBtn" >Save</a>
                                            <% } %>
                                       


                                            <!-- <option>Order Pending</option>
                                        <option>Order Shipped</option>
                                        <option>Order Delivered</option>
                                        <option>Order Returned</option>
                                        <option>Cancel Order</option> -->
                                            <a class="btn btn-secondary print ms-2" href="#"><i
                                                    class="icon material-icons md-print"
                                                    ></i></a>
                        </div>

                        <script>
                            // Select the button element
                            const changeOrderStatusBtn = document.getElementById('changeOrderStatusBtn');

                            // Add click event listener
                            changeOrderStatusBtn.addEventListener('click', async (event) => {
                                event.preventDefault(); // Prevent the default action of the button
                                const statusSelect = document.getElementById('statusSelect');
                                const selectedStatus = statusSelect.value;
                                const orderId = "<%= orderDetails._id %>"
                                // Make the fetch request to change the order status
                                try {
                                    const response = await fetch('/admin/change-order-status', {
                                        method: 'POST', // or 'PUT', 'PATCH', etc.
                                        headers: {
                                            'Content-Type': 'application/json'
                                        },
                                        body: JSON.stringify({ orderId: orderId, selectedStatus: selectedStatus })
                                    });

                                    if (response.ok) {
                                        console.log('Order status changed successfully');
                                        response.json().then(data => {
                                            $.toast({
                                                text: `Order status changed to ${selectedStatus}`, 
                                                heading: 'Order Status Change Succcessfull', 
                                                icon: 'success', 
                                                showHideTransition: 'fade', 
                                                allowToastClose: true, 
                                                hideAfter: 3000, 
                                                stack: false, 
                                                position: 'top-center', 
                                                textAlign: 'left',  
                                                loader: true,  
                                                loaderBg: '#9EC600',  
                                                beforeShow: function () {},
                                                afterShown: function () {},
                                                beforeHide: function () {}, 
                                                afterHidden: function () {}  
                                            });
                                            if (data.orderDetails) {
                                                window.location.reload()
                                            } else {
                                                console.error('Invalid response data:', data);
                                            }
                                        })
                                    } else {
                                        console.error('Failed to change order status');
                                        // Handle error scenario
                                    }
                                } catch (error) {
                                    console.error('Error occurred while changing order status:', error);
                                    // Handle error scenario
                                }
                            });

                            

                        </script>

                    <script>
                        document.addEventListener('DOMContentLoaded', function () {
                            document.getElementById('saveButton').addEventListener('click', async function () {
                                try {
                                    const notes = document.getElementById("notes").value;
                                    const orderId = "<%= orderDetails._id %>";
                                    if (notes) {
                                        const response = await fetch('/admin/orders/order-details/save-notes?orderId=<%=orderDetails._id %>', {
                                            method: 'POST',
                                            body: JSON.stringify({
                                                orderId: orderId,
                                                notes: notes
                                            }),
                                            headers: {
                                                'Content-Type': 'application/json',
                                            }
                                        });

                                        if (response.ok) {
                                            const data = await response.json();
                                            console.log('Notes saved:', data);

                                            sessionStorage.setItem('showToastAfterReload', 'true');

                                            window.location.reload()
                                        } else {
                                            // Display error toast based on the response status code
                                            const errorMessage = `Error saving notes (${response.status})`;
                                            console.error(errorMessage);
                                            $.toast({
                                                heading: 'Error Saving Notes',
                                                text: errorMessage,
                                                position: 'top-center',
                                                showHideTransition: 'slide',
                                                icon: 'error'
                                            });
                                        }
                                    } else {
                                        $.toast({
                                            heading: 'Enter Notes Before Saving',
                                            text: 'You have enter some notes to save it to the order details.',
                                            position: 'top-center',
                                            showHideTransition: 'slide',
                                            icon: 'info'
                                        });
                                    }


                                } catch (error) {
                                    console.error('There was a problem with your fetch operation:', error);
                                    $.toast({
                                        heading: 'There was a problem with the fetch operation',
                                        position: 'top-center',
                                        showHideTransition: 'slide',
                                        icon: 'error'
                                    });
                                }
                            });
                        });

                        // Check if there is a flag to show toast after reload
                        window.onload = function () {
                            const showToastAfterReload = sessionStorage.getItem('showToastAfterReload');
                            if (showToastAfterReload === 'true') {
                                // Display the toast
                                $.toast({
                                    heading: 'Order Cancelled',
                                    text: 'Order has been cancelled',
                                    position: 'top-center',
                                    showHideTransition: 'slide',
                                    icon: 'success'
                                });

                                // Remove the flag from session storage
                                sessionStorage.removeItem('showToastAfterReload');
                            }
                        };
